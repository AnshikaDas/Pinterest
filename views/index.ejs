<% include ./partials/header.ejs %>
<div class="w-full h-screen bg-center bg-cover bg-[url(https://media.istockphoto.com/id/474058580/photo/abstract-colored-background-with-beautiful-flowers-tulips-and-soft-hues.jpg?s=1024x1024&w=is&k=20&c=XBULuxTOW1YyseGalcydPNo8G_qrIhE0uxaGkHLtIJc=)] flex items-center justify-center">
    <div class="w-[25vw]  bg-white px-20 py-10 rounded-[30px]">
      <h1 class="text-3xl text-center font-semibold text-zinc-700 tracking-tighter capitalize leading-none">Welcome to
        pinterest</h1>
      <form action="/login" method="post">
        <input class="border-2 rounded-md block mt-2 w-full px-3 py-2" type="text" name="username"
          placeholder="username">
        <input class="border-2 rounded-md block mt-2 w-full px-3 py-2" type="password" name="password"
          placeholder="password">

        <a class="mt-2 font-semibold text-zinc-500 inline-block" href="#">Forgot Password ?</a>
        <input class="border-2 rounded-full block mt-2 w-full px-3 py-2 bg-red-600 text-white rounded-full"
          type="submit" value="login">
        <p class="text-xs font-semibold text-zinc-700 mt-7 w-3/4 mx-auto text-center">By continuing, you agree to Pinterest's Terms of Service;Opens a new tab and acknowledge that you have read our Privacy Policy Notice at Collection.</p>
      </form>
      <a class="inline-block mt-7 text-sm font-semibold text-zinc-700 text-center w-full" href="/register">Don't have an account</a>
    </div>
  </div>
